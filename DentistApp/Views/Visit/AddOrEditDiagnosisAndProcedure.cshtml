@model DentistApp.Application.ViewModels.VisitInfoForDetailsVM

@{
    ViewData["Title"] = "AddOrEditDiagnosisAndProcedure";
}

<h1>Add or edit diagnosis and procedure</h1>

<hr />

<form asp-action="AddOrEditDiagnosisAndProcedure">
    <input type="hidden" asp-for="Dentist.Id" />
    <input type="hidden" asp-for="Patient.Id" />
    <input type="hidden" asp-for="VisitDate" />
    <input type="hidden" asp-for="VisitStatus" />
    <div class="row" style="display:flex;flex-direction:row;flex-wrap:wrap; justify-content:center">
        <div class="col" style="display:flex;flex-direction:row;flex-wrap:wrap;flex-grow:1">
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="card border-primary mr-3">
                <div class="card-header"><h4>Visit details</h4></div>
                <div class="card-body text-primary">
                    <dl class="row">
                        <dt class="col-sm-5"><text style="color:gray">visit date</text></dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => Model.VisitDate)</dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-5"><text style="color:gray">status</text></dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => Model.VisitStatus)</dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-5"><text style="color:gray">patient</text></dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => Model.Patient.Name) @Html.DisplayFor(model => Model.Patient.LastName)</dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-5"><text style="color:gray">dentist</text></dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => Model.Dentist.Name) @Html.DisplayFor(model => Model.Dentist.LastName)</dd>
                    </dl>
                </div>
            </div>
        </div>


        <div class="card border-primary mr-3 " style="width: 60%;">
            <div class="card-header"><h4><text style="color:gray">diagnosis </text>  <textarea asp-for="Diagnosis" class="form-control" style="background-color:whitesmoke;border:none;outline:none;box-shadow:none"></textarea></h4></div>
            <div class="card-body text-primary">
                <h4><text style="color:gray">procedure </text><textarea asp-for="Procedure" class="form-control" style="border:hidden;outline:none;box-shadow:none"></textarea></h4>
            </div>
            <div class="card-footer">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </div>


    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

