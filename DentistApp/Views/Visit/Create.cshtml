@model DentistApp.Application.ViewModels.TempVisitVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TempVisitVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="get" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VisitDate" class="control-label"></label>
                @*<input asp-for="VisitDate.Date" class="form-control" />*@
                <input type="date" name="date" asp-for="VisitDate" class="form-control" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DentistId" class="control-label"></label>
                @*<input asp-for="DentistId" class="form-control" />
                    <span asp-validation-for="DentistId" class="text-danger"></span>*@

                @*<select asp-for="DentistId" asp-items="Model.Dentists"></select>*@
                <select name="dentistId" asp-for="DentistId" asp-items="Model.Dentists" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Filtruj" class="btn btn-primary" />
                @*<a type="submit" asp-action="Create" asp- asp-route-date="@Model.VisitDate.Date" asp-route-dentistId="@Model.DentistId">Filtruj</a>*@
            </div>
        </form>
    </div>
</div>
@{var displayMessage = String.IsNullOrEmpty(@ViewBag.Message) ? "display:none" : ""; }


        <div class="border border-danger rounded-lg " style="@displayMessage"><h3>@ViewBag.Message</h3>  </div>
    

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="TimeOfVisit" class="control-label"></label>
                    <input asp-for="TimeOfVisit" class="form-control" />
                    <span asp-validation-for="TimeOfVisit" class="text-danger"></span>
                </div>*@

            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                @foreach (var visit in Model.AvailableVisits)
                {
                    <label class="btn btn-outline-primary">
                        <input asp-for="TimeOfVisit" type="radio" value="@visit" autocomplete="off" />@visit.ToString(@"hh\:mm")
                    </label>

                }
            </div>

            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                @*<input asp-for="PatientId" class="form-control" />
                    <span asp-validation-for="PatientId" class="text-danger"></span>*@
                <select asp-for="PatientId" asp-items="Model.Patients" class="form-control"></select>
            </div>

            <input type="hidden" asp-for="VisitDate" value="@Model.VisitDate" />
            <input type="hidden" asp-for="DentistId" value="@Model.DentistId" />

            <div class="form-group">
                <input type="submit" value="Dodaj wizytę" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
