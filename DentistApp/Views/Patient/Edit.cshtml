@model DentistApp.Application.ViewModels.PatientForEditVM



    @{
        ViewData["Title"] = "Edit";
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <h1>Editing patient data</h1>


    <hr />


    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="row">
            <div class="col-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PESEL" class="control-label"></label>
                    <input asp-for="PESEL" class="form-control" />
                    <span asp-validation-for="PESEL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input type="date" asp-for="BirthDate" class="form-control" min="@DateTime.Today.AddYears(-150).ToString("yyyy-MM-dd")" max="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>

            <div class="col-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Address.PatientId" class="form-control" />
                <div class="row">
                    <div class="col" style="width:40%">
                        <div class="form-group">
                            <label asp-for="Address.Building" class="control-label"></label>
                            <input asp-for="Address.Building" class="form-control" />
                            <span asp-validation-for="Address.Building" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col" style="width:40%">
                        <div class="form-group">
                            <label asp-for="Address.Apartment" class="control-label"></label>
                            <input asp-for="Address.Apartment" class="form-control" />
                            <span asp-validation-for="Address.Apartment" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <input type="hidden" asp-for="Address.Id" />
                <div class="form-group">
                    <label asp-for="Address.Street" class="control-label"></label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.PostalCode" class="control-label"></label>
                    <input asp-for="Address.PostalCode" class="form-control" />
                    <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City" class="control-label"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-primary" />
            <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
        </div>
    </form>
