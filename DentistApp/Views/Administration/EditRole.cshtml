@model DentistApp.Application.ViewModels.EditRoleVM

@{
    ViewData["Title"] = "Edit role";
}

<h1>EditRole</h1>

<h4>EditRoleVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <h4>List of users in this role</h4>
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5>@user</h5>
                }
            }
            else
            {
                <h5>There's no users in this role yet.</h5> 
            }
            <a asp-controller="Administration" asp-action="EditRoleUsers" asp-route-roleId="@Model.Id">Add or remove users</a>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListOfRoles">Back to List</a>
</div>

